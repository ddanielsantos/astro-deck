{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": [
			".vscode/",
			"node_modules/",
			"packages/**/dist",
			"packages/**/node_modules"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"noConsoleLog": "off"
			}
		}
	},
	"formatter": {
		"indentSize": 4,
		"lineWidth": 80
	}
}
