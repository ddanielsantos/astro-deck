{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "noEmit": false,
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "outDir": "dist"
    },
    "include": [
        "src/lib/**/*",
        "src/cli/**/*"
    ]
}